class_name Toggle
extends CheckButton

signal self_pressed(toggle_name)

###############################################################################
# Builtin functions                                                           #
###############################################################################

func _ready() -> void:
	connect("pressed", self, "_on_pressed")

###############################################################################
# Connections                                                                 #
###############################################################################

func _on_pressed() -> void:
	emit_signal("self_pressed", self.name)

func _on_toggle_selected(toggle_name: String) -> void:
	if toggle_name != self.name:
		pressed = false
	else:
		pressed = true

