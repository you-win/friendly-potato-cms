class_name VerticalLabelInput
extends VBoxContainer

onready var label: Label = $Label
onready var text_edit: TextEdit = $TextEdit

var title: String = ""

###############################################################################
# Builtin functions                                                           #
###############################################################################

func _ready() -> void:
	label.text = title

###############################################################################
# Connections                                                                 #
###############################################################################

###############################################################################
# Private functions                                                           #
###############################################################################

###############################################################################
# Public functions                                                            #
###############################################################################

func get_value() -> String:
	return text_edit.text
